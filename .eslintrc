{
  "extends": "eslint:recommended",
  "rules": {
    "indent": [2, 2],
    "comma-style": [2, "last"],
    "consistent-this": [2, "_this"],
    "no-nested-ternary": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "no-console": 0,
    "no-unused-vars": [1, {
      "vars": "all",
      "args": "after-used"
    }]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "commonjs": true,
    "jquery": true,
    "shelljs": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "experimentalObjectRestSpread": true,
    "arrowFunctions": true,
    "binaryLiterals": true,
    "blockBindings": true,
    "classes": true
  },
  "plugins": [
    "react"
  ]
}
